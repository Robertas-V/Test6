mixin custom_header(t, exit)
    header
        +navbar(t, exit)
        +menu

mixin navbar(_t, exit)
    .navbar
        .container
            h1
                a(href='/')= _t
                    
            a(href='' ng-controller="LoginController", ng-hide="loggedIn", ng-click="showLogInForm(true)") login
                        
            a(href='#', ng-show='loggedIn')
                #add-fruit(ng-click="add_fruit()")
                    i.zmdi.zmdi-plus.zmdi-3x
                    |Â !{t('layout.navbar.add')}

            a(ng-show='loggedIn', ng-click="logout($event)", href='')= exit
        
mixin menu
  // - navbar for categories
  .menu
    ul#menu
      a(href='#')
        li#uno.icon.fa.fa-bolt
      a(href='#')
        li#dos.icon.fa.fa-keyboard-o
      a(href='#')
        li#tres.icon.fa.fa-rocket
      a(href='#')
        li#cuatro.icon.fa.fa-dribbble
      a(href='#')
        li#cinco.icon.fa.fa-plus-circle


mixin custom_footer(about_txt)
    //- footer
    h3.about(ng-show="loggedIn")= about_txt
    footer(ng-show="loggedIn")
        p !{t('layout.footer.text')}

//- login
mixin login_form
    form.login.ng-hide#login(ng-controller="LoginController", ng-show="showLogIn")
        .loginHeader
            span.title= 'Drone Parts'
            a.closeBtn(href='' ng-click="showLogInForm(false)") X
        img(src="/android-chrome-96x96.png")
        //- loader

        .login-wrapper#login-wrapper
            input#username(tabindex="1", autocapitalize="off", autocorrect="off", type="text", placeholder="username", autofocus, , ng-model='username')
            i.fa.fa-user
            input#password(tabindex="2", type="password", placeholder="password", ng-model='password')
            i.fa.fa-key

            a(href="#")= 'Forgot your password?'
            button(ng-click='send(username, password)')
                i.spinner
                span.state= 'submit'
